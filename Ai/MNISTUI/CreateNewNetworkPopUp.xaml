<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    CanBeDismissedByTappingOutsideOfPopup ="False"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Ai.MNIST.UI.CreateNetworkPopUp">
    <VerticalStackLayout Padding="40" BackgroundColor="White">
        <Button 
            Text="Standard"
            WidthRequest="100"
            CommandParameter="Standard"
            Clicked="StandardNetwork"/>
        <Button 
            Text="Custom"
            WidthRequest="100"
            CommandParameter="Custom"
            Clicked="CustomNetwork"/>
        <Button
            Text="Cancel"
            WidthRequest="100"
            Clicked="Close"/>
    </VerticalStackLayout>
</toolkit:Popup>